    log:
        "%s/logs/BOWTIE/bowtie_index_mature.log" % (config["project-folder"])
    benchmark:
        "%s/benchmark/BOWTIE/bowtie_index_mature.benchmark.tsv" % (config["project-folder"])
    threads: cluster["bowtie_createIndex_mature"]["cpus-per-task"]
